#include <bits/stdc++.h>
using namespace std;
using ll = long long;

const int MOD = 1e9+7;

int main() {
	int n, k;
	cin >> n >> k;
	vector<int> a(n);
	for(int i=0; i<n; i++) {
		cin >> a[i];
	}

	ll self = 0;
	for(int i=0; i<n; i++) {
		for(int j=i+1; j<n; j++) {
			if(a[i]>a[j]) {
				++self;
			}
		}
	}

	ll ans = 0;
	ans = (ans + self*k)%MOD;

	for(int i=0; i<n; i++) {
		ll t = 0;
		for(int j=0; j<n; j++) {
			if(a[j]<a[i]) {
				++t;
			}
		}
		ans += t*(k*(k-1)/2%MOD);
		ans %= MOD;
	}
	cout << ans << endl;
}
	
